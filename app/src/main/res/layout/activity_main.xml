<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ieeeniec.ieeeniecsmartroom.MainActivity">




    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/cover"
        android:id="@+id/imageView"
        android:scaleType="fitXY" />

    <Switch
        android:text="Light 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:id="@+id/light1"
        android:fontFamily="serif-monospace"
        android:typeface="sans"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:tag="light1" />

    <Switch
        android:text="Fan 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/light1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/fan1"
        android:fontFamily="serif-monospace"
        android:typeface="sans"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:tag="fan1" />

    <Switch
        android:text="Light 2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/light2"
        android:layout_below="@+id/fan1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:fontFamily="serif-monospace"
        android:typeface="sans"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:tag="light2" />

    <Switch
        android:text="Fan 2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/light2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:id="@+id/fan2"
        android:fontFamily="serif-monospace"
        android:typeface="sans"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:tag="fan2" />

    <Switch
        android:text="Light 3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/light3"
        android:fontFamily="serif-monospace"
        android:typeface="sans"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:tag="light3" />

    <Switch
        android:text="Fan 3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fan3"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:typeface="sans"
        android:fontFamily="serif-monospace"
        android:layout_below="@+id/light3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:tag="fan3" />

</RelativeLayout>
